# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# OpenAI API (for Whisper)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for Claude Code)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Token (for Claude Code containers to create repos, push code)
GITHUB_TOKEN=your_github_personal_access_token

# Vercel Token (for Claude Code containers to deploy sites)
VERCEL_API_TOKEN=your_vercel_api_token

# Claude Code Orchestrator Configuration
ORCHESTRATOR_URL=http://localhost:3001
ORCHESTRATOR_API_KEY=your_secure_orchestrator_key_here

# Cloud Configuration
CLOUD_PROVIDER=aws
CLOUD_REGION=us-east-1

# Security
ALLOWED_USER_IDS=comma,separated,discord,user,ids
MAX_CONCURRENT_AGENTS=5

# Market Ticker Updates Configuration
MARKET_UPDATES_ENABLED=true
MARKET_UPDATES_GUILD_ID=your_discord_guild_id_here
MARKET_UPDATES_DAILY_CRON=0 9 * * 1-5
MARKET_UPDATES_CLOSE_CRON=5 16 * * 1-5
MARKET_UPDATES_NEWS_CRON=0 9-16 * * 1-5
MARKET_UPDATES_WEEKLY_CRON=0 18 * * 0
MARKET_UPDATES_TIMEZONE=America/New_York

# Finnhub API (for news monitoring)
FINNHUB_API_KEY=get_free_key_at_finnhub.io
FINNHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration
DATABASE_TYPE=postgres  # 'postgres' for Hetzner PostgreSQL, 'sqlite' for local dev
# Hetzner PostgreSQL Configuration
AGENTFLOW_DB_HOST=localhost
AGENTFLOW_DB_PORT=5432
AGENTFLOW_DB_USER=agentflow
AGENTFLOW_DB_PASSWORD=your_secure_password_here
AGENTFLOW_DB_NAME=agentflow

# Google AI / Gemini API (for AI image generation)
# Get your API key at: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_gemini_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here  # Alternative env var name

# Image Generation Settings
IMAGE_OUTPUT_DIR=/workspace/public/images/generated
IMAGE_PUBLIC_URL=/images/generated

# Alpaca Trading Configuration
# Get API keys at: https://alpaca.markets/ (paper trading is free)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true  # Set to 'false' for live trading (USE WITH CAUTION!)
